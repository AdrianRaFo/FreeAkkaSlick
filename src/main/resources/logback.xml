<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT-INFO" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>
        %cyan(%-5level) - %msg%n
      </Pattern>
    </layout>
  </appender>

  <root level="info">
    <appender-ref ref="STDOUT-INFO" />
  </root>

</configuration>